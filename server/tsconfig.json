{
    "compilerOptions": {
        "module": "commonjs",
        "resolveJsonModule": true,
        "allowJs": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "suppressImplicitAnyIndexErrors": true, 
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.json",
        "src/db/config.json"
    ],
    "exclude": [
        "node_modules"
      ]
}