{
    "compilerOptions": {
        "lib": ["es2015"],
        "module": "commonjs",
        "resolveJsonModule": true,
        "allowJs": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "baseUrl": ".",
        "suppressImplicitAnyIndexErrors": true, 
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js"
    ]
}